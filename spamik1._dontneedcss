.weapon-catalog {
    margin-top: 20px;
    max-height: 300px; /* Висота області прокручування */
    overflow-y: scroll; /* Дозволяє прокручувати */
    border: 1px solid #ccc;
    padding: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .weapon-item {
    width: 80px;
    height: 80px;
    border: 1px solid #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }
  
  .weapon-item img {
    width: 50px;
    height: 50px;
    object-fit: cover;
  }
  
  .weapon-item:hover {
    background-color: #f0f0f0;
  }
  